<form action="/add/title" method="POST" class="title-form">
  <%- include('errors') %>
  <div>
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="<%= oldName %>" required />
  </div>
  <div>
    <fieldset>
      <legend>Genre(s):</legend>
      <div>
        <% genres.forEach(genre => { %>
        <div>
          <label for="genre-<%= genre.id %>">
            <input type="checkbox" id="genre-<%= genre.id %>" name="genre"
            value="<%= genre.id %>" <%= selectedGenres.includes(genre.id) ?
            'checked' : '' %> /> <%= genre.name %>
          </label>
        </div>
        <% }) %>
      </div>
    </fieldset>
    <div class="cat-input">
      <label for="newGenre"
        >Insert new genre, if needed. If multiple are needed, separate with a
        comma.</label
      >
      <input type="text" id="newGenre" name="newGenre" />
    </div>
  </div>
  <div>
    <fieldset>
      <legend>Developer(s):</legend>
      <div>
        <% developers.forEach(developer => { %>
        <div>
          <label for="developer-<%= developer.id %>">
            <input type="checkbox" id="developer-<%= developer.id %>"
            name="developer" value="<%= developer.id %>" <%=
            selectedDevelopers.includes(developer.id) ? 'checked' : '' %> /> <%=
            developer.name %>
          </label>
        </div>
        <% }) %>
      </div>
    </fieldset>
    <div class="cat-input">
      <label for="newDeveloper"
        >Insert new developer, if needed. If multiple are needed, separate with
        a comma.</label
      >
      <input type="text" id="newDeveloper" name="newDeveloper" />
    </div>
  </div>
  <div>
    <label for="year">Release Year:</label>
    <input
      type="number"
      id="year"
      name="year"
      min="1900"
      max="2099"
      step="1"
      value="<%= oldYear %>"
      required
    />
  </div>
  <div>
    <label for="coverArt">Cover Art (url):</label>
    <input
      type="text"
      id="coverArt"
      name="coverArt"
      value="<%= oldCoverArt %>"
    />
  </div>
  <div class="form-btns">
    <a href="<%= cancelUrl %>">Cancel</a>
    <button type="submit">Submit</button>
  </div>
</form>
