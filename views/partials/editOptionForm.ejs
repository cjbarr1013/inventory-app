<form
  action="/edit/<%= option %>/<%= optionId %>"
  method="POST"
  class="option-form"
>
  <%- include('errors') %>
  <div>
    <label for="<%= option %>"
      >Please edit the <%= option %> name. Additional <%= option %>s cannot be
      created here.</label
    >
    <input
      type="text"
      id="<%= option %>"
      name="<%= option %>"
      value="<%= oldName %>"
    />
  </div>
  <div class="form-btns">
    <a class="btn-animation" href="<%= cancelUrl %>">Cancel</a>
    <button class="btn-animation" type="submit">Submit</button>
  </div>
</form>
