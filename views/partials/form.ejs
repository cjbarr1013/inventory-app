<form action="/new/title" method="POST">
  <div>
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required />
  </div>
  <div>
    <label for="genre-select">Genre(s):</label>
    <select name="genre-select" id="genre-select" required>
      <% genres.forEach(genre => { %>
      <option value="<%= genre.id %>"><%= genre.name%></option>
      <% }) %>
    </select>
  </div>
  <div>
    <label for="developer-select">Developer(s):</label>
    <select name="developer-select" id="developer-select" required>
      <% developers.forEach(developer => { %>
      <option value="<%= developer.id %>"><%= developer.name%></option>
      <% }) %>
    </select>
  </div>
  <div>
    <label for="year">Year:</label>
    <input
      type="number"
      id="year"
      name="year"
      min="1900"
      max="2099"
      step="1"
      required
    />
  </div>
  <div>
    <label for="cover-art">Message:</label>
    <input type="text" id="cover-art" name="cover-art" required />
  </div>
  <button type="submit">Submit</button>
</form>
